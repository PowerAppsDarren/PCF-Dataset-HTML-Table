<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control  namespace="SuperPowerLabs" 
            constructor="PCFHTMLTable" 
            version="0.0.1" 
            display-name-key="PCFHTMLTable" 
            description-key="PCFHTMLTable description" 
            control-type="standard" >
    <external-service-usage enabled="false"></external-service-usage>

    <!-- dataset node represents a set of entity records on CDS; 
          (Common Data Service) allow more than one datasets -->
    <data-set name="Items" display-name-key="Items" cds-data-set-options="displayCommandBar:true;displayViewSelector:true" />
    <property name="SelectedRecordId" of-type="SingleLine.Text" usage="output" />
    <property name="ShowGridLines" of-type="TwoOptions.YesNo" display-name-key="ShowGridLines" usage="input" default-value="true" />
    <property name="GridLineThickness" of-type="Whole.None" display-name-key="GridLineThickness" usage="input" default-value="1" />

    <resources>
      <code path="index.ts" order="1"/>
    </resources>
  </control>
</manifest>
